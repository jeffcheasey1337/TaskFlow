<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".TaskFlowApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash Activity как стартовый экран -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".ui.CalendarActivity"
            android:parentActivityName=".ui.MainActivity"/>

        <activity
            android:name=".ui.StatisticsActivity"
            android:parentActivityName=".ui.MainActivity"/>

        <activity
            android:name=".ui.AchievementsActivity"
            android:parentActivityName=".ui.MainActivity"/>

        <activity
            android:name=".ui.PomodoroActivity"
            android:parentActivityName=".ui.MainActivity"/>

    </application>

</manifest>
