<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Large Title (iOS Style) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/largeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Задачи"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сегодня"
                android:textSize="13sp"
                android:textColor="@color/ios_text_secondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Glass Category Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:clipToPadding="false">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/categoryChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacing="8dp"
                app:singleSelection="true"
                app:selectionRequired="false"/>
        </HorizontalScrollView>

        <!-- Tasks RecyclerView with glass cards -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="90dp"
            android:clipToPadding="false"
            android:overScrollMode="never"/>

        <!-- Glass Bottom Navigation -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="@drawable/glass_bottom_nav_background"/>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:menu="@menu/bottom_nav_menu"
                app:labelVisibilityMode="labeled"
                app:itemIconTint="@color/bottom_nav_color"
                app:itemTextColor="@color/bottom_nav_color"
                app:itemRippleColor="@android:color/transparent"
                app:elevation="0dp"/>
        </FrameLayout>

    </LinearLayout>

    <!-- Glass FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/ios_blue"
        app:tint="@android:color/white"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:hoveredFocusedTranslationZ="12dp"
        app:pressedTranslationZ="16dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.LargeComponent"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>