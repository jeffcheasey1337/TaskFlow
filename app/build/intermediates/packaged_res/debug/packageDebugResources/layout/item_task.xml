<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/taskCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    android:background="@drawable/glass_card_background"
    app:cardBackgroundColor="@android:color/transparent"
    android:foreground="@drawable/ripple_effect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/glass_card_background">

        <!-- Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:button="@drawable/custom_checkbox"
            android:layout_marginEnd="12dp"
            app:buttonTint="@color/ios_blue"/>

        <!-- Task Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title with priority indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/priorityIndicator"
                    android:layout_width="3dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/priority_indicator"
                    android:backgroundTint="@color/priority_high"/>

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Task Title"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <!-- Project and deadline info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <!-- Project tag -->
                <TextView
                    android:id="@+id/projectTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Проект"
                    android:textSize="13sp"
                    android:textColor="@color/ios_text_secondary"
                    android:background="@drawable/project_tag_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>

                <!-- Deadline -->
                <TextView
                    android:id="@+id/deadlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Сегодня 18:00"
                    android:textSize="13sp"
                    android:textColor="@color/ios_text_secondary"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"/>

                <!-- Reminder icon -->
                <ImageView
                    android:id="@+id/reminderIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_bell"
                    android:layout_marginStart="8dp"
                    app:tint="@color/ios_blue"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                android:background="@drawable/icon_button_background"
                android:contentDescription="Edit"
                app:tint="@color/ios_blue"/>

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                android:background="@drawable/icon_button_background"
                android:layout_marginStart="8dp"
                android:contentDescription="Delete"
                app:tint="@color/ios_red"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>